<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GyanBlog</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container1">
      <%- include("partials/header.ejs") %>
      <div class="mainBody">
        <div class="saves">
          <div class="savedContent contactHeading">
            <h1>My Posts</h1>
            <ul>
                <% if(posts.length > 0){ %>
                    <% posts.forEach(post => { %>
                    <li>
                      <h2><%= post.title %></h2>
                      <p><%= post.content %></p>
                    </li>
                    <% }) %>
                <% }else{ %>
                    <li>
                        <p>You have no previous work</p>
                    </li>
                    <% } %>
            </ul>
          </div>
        </div>
      </div>
      <%- include("partials/footer.ejs") %>
    </div>
  </body>
</html>
